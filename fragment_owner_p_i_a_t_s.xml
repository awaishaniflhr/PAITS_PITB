<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:context=".OwnerFragmentPAITS">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp">

            <LinearLayout
                android:id="@+id/ll_primies_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/owner_id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_owner_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="number"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner_name"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/owner_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_owner_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="text"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_owner_address"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/addres"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="textPostalAddress"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner_mobile"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="text"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner_cnic"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/cnic"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_owner_cnic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="number"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner_picture"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/owner_picture"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_owner_picture"
                    android:layout_below="@+id/tv_owner_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="textPostalAddress"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_attach"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_16sdp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner_telephone"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/telephone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_telephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="number"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="TextFields" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/bg_round_gray_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_12sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner_education"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@string/education"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_owner_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@null"
                    android:hint="@string/type_here"
                    android:inputType="number"
                    android:maxLength="15"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/light_gray"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_gray_border"
                    android:backgroundTint="@color/green"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_continue"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_gray_border"
                    android:backgroundTint="@color/dark_blue"
                    android:text="@string/save_continue"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>