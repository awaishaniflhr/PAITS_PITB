<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".HerdFragmentPAITS">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:id="@+id/ll_primies_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_herd_id"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/keeper_id"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="number"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:id="@+id/tv_herd_livestock_holder_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/livestock_holder_type"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_livestock_holder_type"
                        android:layout_below="@+id/tv_herd_livestock_holder_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="textPostalAddress"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_img_herd_livestock_holder_details"
                        android:background="@drawable/ic_nav_drop"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_16sdp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_herd_livestock_holder_number"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/livestock_holder_number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_livestock_holder_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="text"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_herd_livestock_holder_details"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/livestock_holder_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_livestock_holder_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="text"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:id="@+id/tv_herd_premises_details"
                        android:text="@string/premises_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_premises_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="text"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_herd_tagged_animals"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/herd_tagged_animals"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_tagged_animals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="number"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="TextFields" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_herd_livestock_untagged_animals"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/livestock_untagged_animals"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_livestock_untagged_animals"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="number"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="TextFields" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_herd_livestock_count"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/livestock_count"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_livestock_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="number"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/bg_round_gray_border"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_herd_nfa_official"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="@string/nfa_official"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                    <EditText
                        android:id="@+id/et_herd_nfa_official"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@null"
                        android:hint="@string/type_here"
                        android:inputType="number"
                        android:maxLength="15"
                        android:textColor="@color/gray"
                        android:textColorHint="@color/light_gray"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_herd_submit"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/bg_round_gray_border"
                        android:backgroundTint="@color/dark_blue"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>